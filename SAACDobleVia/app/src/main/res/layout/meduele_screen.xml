<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Fila superior -->
    <TextView
        android:id="@+id/txtCabeza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CABEZA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgcabeza"
        app:layout_constraintEnd_toEndOf="@id/imgcabeza" />

    <ImageButton
        android:id="@+id/imgcabeza"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cabeza"
        app:layout_constraintTop_toBottomOf="@id/txtCabeza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgBoca" />

    <TextView
        android:id="@+id/txtBoca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIENTES"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgBoca"
        app:layout_constraintEnd_toEndOf="@id/imgBoca" />

    <ImageButton
        android:id="@+id/imgBoca"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_muelas"
        app:layout_constraintTop_toBottomOf="@id/txtBoca"
        app:layout_constraintStart_toEndOf="@id/imgcabeza"
        app:layout_constraintEnd_toStartOf="@id/imgGarganta" />

    <TextView
        android:id="@+id/txtGarganta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GARGANTA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#9C27B0"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgGarganta"
        app:layout_constraintEnd_toEndOf="@id/imgGarganta" />

    <ImageButton
        android:id="@+id/imgGarganta"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_garganta"
        app:layout_constraintTop_toBottomOf="@id/txtGarganta"
        app:layout_constraintStart_toEndOf="@id/imgBoca"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fila media -->
    <TextView
        android:id="@+id/txtEstomago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTÓMAGO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgcabeza"
        app:layout_constraintStart_toStartOf="@id/imgEstomago"
        app:layout_constraintEnd_toEndOf="@id/imgEstomago"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/imgEstomago"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_estomago"
        app:layout_constraintTop_toBottomOf="@id/txtEstomago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgEspalda" />

    <TextView
        android:id="@+id/txtEspalda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESPALDA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#795548"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgBoca"
        app:layout_constraintStart_toStartOf="@id/imgEspalda"
        app:layout_constraintEnd_toEndOf="@id/imgEspalda"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/imgEspalda"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_espalda"
        app:layout_constraintTop_toBottomOf="@id/txtEspalda"
        app:layout_constraintStart_toEndOf="@id/imgEstomago"
        app:layout_constraintEnd_toStartOf="@id/imgmusculos" />

    <TextView
        android:id="@+id/txtMusculos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÚSCULOS"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgGarganta"
        app:layout_constraintStart_toStartOf="@id/imgmusculos"
        app:layout_constraintEnd_toEndOf="@id/imgmusculos"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/imgmusculos"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_musculos"
        app:layout_constraintTop_toBottomOf="@id/txtMusculos"
        app:layout_constraintStart_toEndOf="@id/imgEspalda"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fila inferior -->
    <TextView
        android:id="@+id/txtHuesos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUESOS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#607D8B"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgEstomago"
        app:layout_constraintStart_toStartOf="@id/imgHuesos"
        app:layout_constraintEnd_toEndOf="@id/imgHuesos"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/imgHuesos"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_articulas"
        app:layout_constraintTop_toBottomOf="@id/txtHuesos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de salir -->
    <TextView
        android:id="@+id/txtSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/imgSalirBtn"
        app:layout_constraintStart_toStartOf="@id/imgSalirBtn"
        app:layout_constraintEnd_toEndOf="@id/imgSalirBtn" />

    <ImageButton
        android:id="@+id/imgSalirBtn"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_salir_foto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
